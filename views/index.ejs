<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head.ejs') %>
    <title>Blog | <%= title %></title>
<body>
    <%- include('./partials/nav.ejs') %>
    <div class="blog-content-container">
    <h3 class="page-title">All BLogs</h3>
    <% if(blogs.length>0) {%>
        <% blogs.forEach((blog) => {%>
            <div class="main-blog-content">
            <h4 class="title"><%= blog.title %> <br><span class="time"><%= blog.time %></span> <br><span class="author"><%= blog.author %></span></h4>
            <p class="description"><%= blog.description %></p>
            </div>
        <% }) %>
        
        <% }else { %>
            <p class="no-blogs">No blogs to display. Be the first to create one.</p>
            <% } %>
        </div>
    </div>
    <%- include('./partials/footer.ejs') %>
</body>
</html>
